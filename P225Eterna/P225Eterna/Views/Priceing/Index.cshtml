@model List<Plan>
@{
    ViewData["Title"] = "Index";
}

<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">

        <ol>
            <li><a href="index.html">Home</a></li>
            <li>Pricing</li>
        </ol>
        <h2>Pricing</h2>

    </div>
</section><!-- End Breadcrumbs -->
<!-- ======= Pricing Section ======= -->
<section id="pricing" class="pricing">
    <div class="container">

        <div class="row no-gutters">

            @foreach (Plan plan in Model)
            {
                <div class="col-lg-4 box @(plan.IsFeature ? "featured":"")">
                    <h3>@plan.Name</h3>
                    <h4>$@plan.Price<span>per month</span></h4>
                    <ul>
                        @foreach (PlanFeature planFeature in plan.PlanFeatures)
                        {
                            <li><i class="bx bx-check"></i> @planFeature.FeatureItem.Name</li>
                        }
                    </ul>
                    <a href="#" class="buy-btn">Buy Now</a>
                </div>
            }

        </div>

    </div>
</section><!-- End Pricing Section -->